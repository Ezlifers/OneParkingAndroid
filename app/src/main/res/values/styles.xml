<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppDarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppDarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MapButton">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/small</item>
        <item name="android:paddingRight">@dimen/small</item>
        <item name="android:paddingTop">@dimen/xsmall</item>
    </style>

    <style name="SmallButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:padding">@dimen/small</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/btnText</item>
        <item name="android:drawablePadding">@dimen/xsmall</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ButtonReserve" parent="SmallButton">
        <item name="android:background">@drawable/btn_reserve</item>
    </style>

    <style name="ButtonReport" parent="SmallButton">
        <item name="android:background">@drawable/btn_report</item>
    </style>

    <style name="ButtonDisability" parent="SmallButton">
        <item name="android:background">@drawable/btn_disability</item>
    </style>

    <style name="NormalButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:padding">@dimen/msmall</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ButtonReportNormal" parent="NormalButton">
        <item name="android:background">@drawable/btn_report</item>
    </style>

</resources>
