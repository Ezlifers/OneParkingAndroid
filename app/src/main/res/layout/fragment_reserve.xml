<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/dialog"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="@dimen/medium"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_reserve_title"
                    android:textColor="@color/textPrimaryInvert" />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_reserve_money"
                    android:textColor="@color/textPrimaryLessInvert" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_reserve_counter">

                <TextView
                    style="@style/TextAppearance.AppCompat.Display3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="00:00" />

                <FrameLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/small"
                    android:layout_gravity="end">

                    <ImageView
                        android:layout_width="@dimen/icon"
                        android:layout_height="@dimen/icon"
                        app:srcCompat="@drawable/ic_add_time"
                        android:layout_gravity="center"
                        android:contentDescription="@string/dialog_reserve_add" />

                </FrameLayout>

                <FrameLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/small"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_width="@dimen/icon"
                        android:layout_height="@dimen/icon"
                        app:srcCompat="@drawable/ic_less_time"
                        android:layout_gravity="center"
                        android:contentDescription="@string/dialog_reserve_less" />

                </FrameLayout>


            </FrameLayout>

            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small">

                <TextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/textPrimaryInvert"
                    tools:text="Valor: 3.000$" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/reserveAlert"
                        android:text="@string/reserve_to"
                        android:layout_marginRight="@dimen/small"
                        android:layout_marginEnd="@dimen/small"
                        tools:text="Desde" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimaryInvert"
                        tools:text="12:45 pm" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_done"
            app:fabSize="normal"
            app:layout_anchor="@id/detail"
            app:layout_anchorGravity="right"
            android:layout_marginRight="@dimen/msmall"
            android:layout_marginEnd="@dimen/msmall" />


    </android.support.design.widget.CoordinatorLayout>
</layout>

