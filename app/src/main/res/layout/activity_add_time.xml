<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data class="ReserveBinding">
        <import type="android.view.View" alias="V"/>
        <import type="java.lang.String" alias="S"/>

        <variable
            name="handler"
            type="ezlife.movil.oneparkingapp.activities.AddTimeActivity"/>
        <variable
            name="price"
            type="java.lang.String"/>
        <variable
            name="valueMsg"
            type="java.lang.String"/>
        <variable
            name="time"
            type="java.lang.Integer"/>
        <variable
            name="timeOut"
            type="java.lang.Boolean"/>
        <variable
            name="timeTo"
            type="java.lang.Integer"/>

    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    style="@style/TextAppearance.AppCompat.Display4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    app:requestTime="@{time}"
                    tools:text="00:00"
                    />

                <ImageView
                    android:id="@+id/btn_less"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/icon"
                    android:layout_height="@dimen/icon"
                    android:layout_marginStart="@dimen/medium"
                    android:layout_marginLeft="@dimen/medium"
                    android:layout_marginBottom="@dimen/xlarge"
                    app:srcCompat="@drawable/ic_less_time"
                    android:contentDescription="@null"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:onClick="@{()->handler.lessTime()}"

                    />

                <ImageView
                    android:id="@+id/btn_more"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/icon"
                    android:layout_height="@dimen/icon"
                    android:layout_marginEnd="@dimen/xmedium"
                    android:layout_marginRight="@dimen/medium"
                    android:layout_marginBottom="@dimen/xlarge"
                    app:srcCompat="@drawable/ic_add_time"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:onClick="@{()->handler.moreTime()}"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small"
                >
                <TextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/textPrimaryInvert"
                    android:text="@{S.format(valueMsg, price)}"
                    tools:text="Valor: 3.000$"
                    />
                <LinearLayout
                    android:visibility="@{timeOut ? V.VISIBLE : V.GONE}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/reserveAlert"
                        android:text="@string/reserve_to"
                        android:layout_marginRight="@dimen/small"
                        tools:text="Desde"/>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimaryInvert"
                        app:hourFormat="@{timeTo}"
                        tools:text="12:45 pm"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_done"
            app:layout_anchor="@id/detail"
            app:layout_anchorGravity="right"
            app:fabSize="normal"
            android:layout_marginRight="@dimen/small"
            android:onClick="@{()->handler.doneRequestTime()}"
            />
    </android.support.design.widget.CoordinatorLayout>
</layout>

