<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="MapBinding">

        <variable
            name="handler"
            type="ezlife.movil.oneparkingapp.activities.MapActivity" />

        <variable
            name="tracing"
            type="boolean"/>

        <variable
            name="car"
            type="ezlife.movil.oneparkingapp.db.Car" />

        <variable
            name="format"
            type="java.text.NumberFormat" />

        <variable
            name="money"
            type="long" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,2">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TableRow
                android:id="@+id/panel"
                android:background="@color/colorPrimary">

                <LinearLayout
                    style="@style/MapButton"
                    android:onClick="@{()->handler.addMoney()}">

                    <ImageView
                        android:layout_width="@dimen/map_icon_primary"
                        android:layout_height="@dimen/map_icon_primary"
                        android:contentDescription="@string/money"
                        app:srcCompat="@drawable/ic_money" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@{format.format(money)}"
                        android:textColor="@color/textPrimaryInvert"
                        tools:text="10.000" />

                    <ImageView
                        android:layout_width="@dimen/map_icon_sec"
                        android:layout_height="@dimen/map_icon_sec"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_add" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/separatorDark" />

                <LinearLayout
                    style="@style/MapButton"
                    android:onClick="@{()->handler.selectCar()}">

                    <ImageView
                        android:layout_width="@dimen/map_icon_primary"
                        android:layout_height="@dimen/map_icon_primary"
                        android:contentDescription="@string/my_Car"
                        app:srcCompat="@drawable/ic_car" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@{car.apodo}"
                            android:textColor="@color/textPrimaryInvert"
                            tools:text="Amenaza Roja" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{car.placa.toUpperCase()}"
                            android:textColor="@color/textPrimaryLessInvert"
                            tools:text="ABC105" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/map_icon_sec"
                        android:layout_height="@dimen/map_icon_sec"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand" />
                </LinearLayout>


            </TableRow>
        </TableLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="10dp"
            android:onClick="@{()->handler.checkPermLocation()}"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_location_disabled" />
    </android.support.design.widget.CoordinatorLayout>

</layout>

